@page "/Account/{userKey:int}/Index"
@model UserIndexModel
@{
    ViewData["Title"] = "User Profile";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <h2>@ViewData["Title"]</h2>
        
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Model.User.FirstName @Model.User.LastName</h5>
                
                <div class="mb-3">
                    <label class="form-label fw-bold">Email</label>
                    <p class="form-control-plaintext">@Model.User.Email</p>
                </div>
                
                @if (Model.User.Birthdate.HasValue)
                {
                    <div class="mb-3">
                        <label class="form-label fw-bold">Date of Birth</label>
                        <p class="form-control-plaintext">@Model.User.Birthdate.Value.ToShortDateString()</p>
                    </div>
                }
                
                <div class="mb-3">
                    <label class="form-label fw-bold">Role</label>
                    <p class="form-control-plaintext">@Model.User.Role</p>
                </div>
                
                <div class="mb-3">
                    <label class="form-label fw-bold">Account Created</label>
                    <p class="form-control-plaintext">@Model.User.InsertedDateTime.ToShortDateString()</p>
                </div>
                
                @if (Model.User.UpdatedDateTime.HasValue)
                {
                    <div class="mb-3">
                        <label class="form-label fw-bold">Last Updated</label>
                        <p class="form-control-plaintext">@Model.User.UpdatedDateTime.Value.ToShortDateString()</p>
                    </div>
                }
                
                <div class="d-flex gap-2">
                    @if (Model.CanEdit)
                    {
                        <a asp-page="/Account/Edit" asp-route-userKey="@Model.User.UserKey" class="btn btn-primary">Edit Profile</a>
                    }
                    <a asp-page="/Account/Index" class="btn btn-outline-secondary">Back to Accounts</a>
                </div>
            </div>
        </div>
    </div>
</div>