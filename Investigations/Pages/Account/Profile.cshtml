@page "/Accounts/{userKey:int}/Profile"
@model ProfileModel
@{
    ViewData["Title"] = "User Profile";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <h2>@ViewData["Title"]</h2>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Model.FirstName @Model.LastName</h5>

                <div class="mb-3">
                    <label class="form-label fw-bold">Email</label>
                    <p class="form-control-plaintext">@Model.Email</p>
                </div>

                @if (string.IsNullOrEmpty(Model.Birthdate))
                {
                    <div class="mb-3">
                        <label class="form-label fw-bold">Date of Birth</label>
                        <p class="form-control-plaintext">@Model.Birthdate</p>
                    </div>
                }

                <div class="mb-3">
                    <label class="form-label fw-bold">Role</label>
                    <p class="form-control-plaintext">@Model.Role</p>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Account Created</label>
                    <p class="form-control-plaintext">@Model.AccountCreatedOn</p>
                </div>

                @if (!string.IsNullOrEmpty(Model.LastUpdatedOn))
                {
                    <div class="mb-3">
                        <label class="form-label fw-bold">Last Updated</label>
                        <p class="form-control-plaintext">@Model.LastUpdatedOn</p>
                    </div>
                }

                <div class="d-flex gap-2">
                    @if (@currentUser.CanEditAccount(Model.UserKey))
                    {
                        <a asp-page="/Account/Edit" asp-route-userKey="@Model.UserKey" class="btn btn-primary">Edit
                            Profile</a>
                        }

                        @if (@currentUser.CanViewAccountList())
                        {
                            <a asp-page="/Account/Index" class="btn btn-outline-secondary">Back to Accounts</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
